{
  "name": "bulletin-board",
  "version": "1.0.0",
  "description": "Simple Bulleting Board",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\" ",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "MongoDB",
    "Mongoose",
    "Express.JS",
    "React.JS",
    "React-Strap",
    "Redux",
    "Node.JS",
    "Cloudinary"
  ],
  "author": "Zirach Hangad",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.1",
    "cloudinary": "^1.28.1",
    "concurrently": "^7.0.0",
    "express": "^4.17.2",
    "heroku": "^7.59.2",
    "mongoose": "^6.1.8"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
